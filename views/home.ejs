<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
        <p> URL Generated: http://localhost:8005/url/ <%= id %></p>
    <% } %>
    <div>
        <form method="POST" action="/url">
            <label for="originalURL"> Enter the original URL </label>
            <input type="text" 
                name="url" 
                id="url"
                placeholder="https://example.com"
            />
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S. No.</th>
                    <th>ShortID</th>
                    <th>originalURL</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= url.shortURL %>  </td>
                        <td><%= url.originalURL%> </td>
                        <td><%= url.visitHistory.length %> </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
    
</body>
</html>